#include "conio.h"
#include <iostream>
#include <string>
using namespace std;

void main()
{string x;
bool y=true;
cout<<"ingresar la palabra que se quiere saber si es palindromo: \n";
getline(cin,x);

for(int i=0;i<(x.length())/2;i++)
	{if(x.at(i)!=x.at(x.length()-i-1))
	y=false;
	}
if(y==true)
	cout<<"\nEs palindromo";

else
	cout<<"\nNo es palindromo";
getch();
}
